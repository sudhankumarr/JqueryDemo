mixin form-account(content)
	- var content = content || {};
	- content.class = content.class || '';
	- content.id = content.id || '';

	+div({class: content.class})
		h2.account-header. Account Information
		form(name="account", action='/get_quote.html', method='get', class='account', id='account', novalidate)
			fieldset
				h4(class='error-msg hide') Please fill all the mandatory fields
				legend.form-heading General Information
				+div({class: 'form-group'})
					label(class='fname-label js-fname-label' for='fname') First Name
						span *
					+input({type: 'text', name: 'first-name', id: 'fname', class: 'fname account-form-input js-validate-field js-name'})
				+div({class: 'form-group'})
					label(class='lname-label js-lname-label' for='lname') Last Name
						span *
					+input({type: 'text', name: 'last-name', id: 'lname', class: 'lname account-form-input js-validate-field js-name'})
				+div({class: 'form-group'})
					label(class='email-label js-lname-label' for='email-address') Email Address
						span *
					+input({type: 'email', name: 'email-id', id: 'email-address', class: 'email-id account-form-input js-validate-field js-email'})
				+div({class: 'form-group'})
					fieldset
						label(class= 'phone-numlist') Phone Number
							span *
						+div({class: 'field-group-wrapper hidden-xs'})
							+input({type: 'text', name: 'phone-number', id: 'contact-number1', class: 'phone-number js-phone-number1 account-form-input js-validate-field'})(maxlength=3)
							+input({type: 'text', name: 'phone-number', id: 'contact-number2', class: 'phone-number js-phone-number2 account-form-input js-validate-field'})(maxlength=3)
							+input({type: 'text', name: 'phone-number', id: 'contact-number3', class: 'phone-number js-phone-number3 account-form-input js-validate-field'})(maxlength=4)
						//- for Mobile View Only
						+div({class:'field-group-wrapper visible-xs'})
							+input({type: 'text', name: 'phone-number', id: 'contact-number1', class: 'phone-number js-phone-number4 account-form-input js-validate-field'})(maxlength=10)
				+div({class: 'form-group'})
					fieldset
						label(class='dob') Date of Birth
							span *
						+div({class:'field-group-wrapper js-validate-dob hidden-xs'})
							select(title='month', class='select-dob js-select-month js-select')
								option(value='default') Month
								option(value='Jan') Jan
								option(value='Feb') Feb
								option(value='Mar') Mar
								option(value='Apr') Apr
								option(value='May') May
							select(title='day', class='select-dob js-select-day js-select')
								option(value='default') Day
								option(value='1') 1
								option(value='2') 2
								option(value='3') 3
								option(value='4') 4
								option(value='5') 5
							select(title='year', class='select-dob js-select-year js-select')
								option(value='default') Year
								option(value='2011') 2011
								option(value='2012') 2012
								option(value='2013') 2013
								option(value='2014') 2014
								option(value='2015') 2015
						//- for Mobile View Only
						+div({class: 'field-group-wrapper visible-xs'})
							+input({type: 'date', name: 'selectdate', class:'select-date js-input-date js-validate-field'})
				+div({class: 'form-group'})
					fieldset
						legend(class='legend') Gender
							span *
						+div({class:'gender-female'})
							+input({type: 'radio', name: 'gender', id: 'female', class: 'gender js-gender', value: 'Female'})
							label(class='', for='female') Female
						+div({class:'gender-male'})
							+input({type: 'radio', name: 'gender', id: 'male', class: 'gender js-gender', value: 'Male'})
							label(class='', for='male') Male
						+div({class: 'form-group'})
				+div({class: 'form-group'})
					+div({class: 'field js-gender-wrapper hide'})
						fieldset
							+div({class: 'gender-option'})
								legend(class='legend'). Lorem ipsum dolor sit amet, consectetur adipisling elit ?
								+div({class:'gender-opt1'})
									+input({type: 'checkbox', name: 'option', id: 'option1', class: 'option js-option'})
									label(class='', for='option1') Option1
								+div({class:'gender-opt2'})
									+input({type: 'checkbox', name: 'option', id: 'option2', class: 'option js-option'})
									label(class='', for='option2') Option2
								+div({class:'gender-opt3'})
									+input({type: 'checkbox', name: 'option', id: 'option3', class: 'option js-option'})
									label(class='', for='option3') Option3
				//- break area
				+div({class: 'form-group'})
					fieldset
						legend.form-heading Payment Options:
						+div({class: 'payment-opt'})
							button(type='button', class='payment-btn', data-toggle='modal', data-target='#payment-popup' )
								span(class='glyphicon glyphicon-plus')
								| ADD NEW PAYMENT OPTION
				+div({class: 'submit'})
					+input({type:'submit', class:'account-submit', id:'account-submit', value:'SUBMIT'})